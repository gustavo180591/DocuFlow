# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/docuflow"
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/docuflow_shadow"

# Application
NODE_ENV="development"
PORT=3000

# File Uploads (adjust paths as needed)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10MB"

# OCR Configuration
TESSERACT_LANG="spa"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Session (generate a secure secret for production)
SESSION_SECRET="change-this-in-production"
